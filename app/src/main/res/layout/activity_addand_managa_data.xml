<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lim.jhsoft.com.firebasestore.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:text="쓰기"
                android:id="@+id/write_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="읽기"
                android:id="@+id/read_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="data_model"
                android:id="@+id/data_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="add_data"
                android:id="@+id/add_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="update_data"
                android:id="@+id/update_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="transactions1"
                android:id="@+id/transactions1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="transactions2"
                android:id="@+id/transactions2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="transactions3"
                android:id="@+id/transactions3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="delete1"
                android:id="@+id/delete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />










        </LinearLayout>
    </ScrollView>
</LinearLayout>
